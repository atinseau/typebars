{
	"$schema": "https://swc.rs/schema.json",
	"sourceMaps": true,
	"jsc": {
		"target": "es2020",
		"parser": {
			"syntax": "typescript",
			"decorators": true,
			"dynamicImport": true
		},
		"transform": {
			"legacyDecorator": true,
			"decoratorMetadata": true
		}
	},
	"module": {
		"type": "commonjs"
	},
	"exclude": [".spec.ts", ".spec-e2e.ts", ".spec-int.ts"],
	"minify": true
}
